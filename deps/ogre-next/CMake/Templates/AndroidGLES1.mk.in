LOCAL_PATH := $(call my-dir)
    include $(CLEAR_VARS)
    LOCAL_MODULE    := @ANDROID_MOD_NAME@

    LOCAL_LDLIBS	:= -landroid -lc -lm -ldl -llog -lEGL -lGLESv1_CM
    LOCAL_LDLIBS	+= -L@OGRE_BINARY_DIR@/lib -L@OGRE_DEPENDENCIES_DIR@/lib/@ANDROID_ABI@
	@SAMPLE_LDLIBS@
    LOCAL_LDLIBS	+= -lPlugin_ParticleFXStatic -lRenderSystem_GLESStatic -lOgreOverlayStatic -lOgreMainStatic
    LOCAL_LDLIBS	+= -lzzip -lz -lFreeImage -lfreetype -lOIS @OGRE_BINARY_DIR@/systemlibs/@ANDROID_ABI@/libsupc++.a @OGRE_BINARY_DIR@/systemlibs/@ANDROID_ABI@/libstdc++.a @NDKOUT@/obj/local/@ANDROID_ABI@/libcpufeatures.a
    LOCAL_STATIC_LIBRARIES := android_native_app_glue cpufeatures
    
    LOCAL_CFLAGS := -DGL_GLEXT_PROTOTYPES=1 -I@OGRE_BINARY_DIR@/include -I@CMAKE_SOURCE_DIR@/OgreMain/include -I@CMAKE_SOURCE_DIR@/RenderSystems/GLES/include -I@CMAKE_SOURCE_DIR@/RenderSystems/GLES/include/EGL
    LOCAL_CFLAGS += -I@ANDROID_NDK@/sources/cpufeatures -I@CMAKE_SOURCE_DIR@/Components/Overlay/include 
    LOCAL_CFLAGS += -I@CMAKE_SOURCE_DIR@/PlugIns/ParticleFX/include 
    LOCAL_CFLAGS += -I@OGRE_DEPENDENCIES_DIR@/include -I@OGRE_DEPENDENCIES_DIR@/include/OIS -I@OGRE_BINARY_DIR@/Samples/include
    LOCAL_CFLAGS += -fexceptions -frtti -x c++ -D___ANDROID___ -DANDROID -DZZIP_OMIT_CONFIG_H  
    
    @JNI_SRC@ 
    include $(BUILD_SHARED_LIBRARY) 
      
    $(call import-module,android/cpufeatures) 
    $(call import-module,android/native_app_glue) 
